<legend>
	<h1>
		Recordings <small>(<%= @recordings.count %>)</small>
		<a href="<%=new_recording_path%>" class="btn btn-small pull-right"><i class="icon-plus-sign"></i> Create new recording</a>
	</h1>
</legend>
<% @recordings.each do |recording| %>

<div>
  <%= link_to(recording.single.title, recording_path(recording.single)) %>
  performed by
  <%= link_to(recording.band.name, band_path(recording.band)) %>
</div>
<% end %>