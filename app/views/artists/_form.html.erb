<%= form_for(@artist, :html => { :class => 'form-horizontal' }) do |f| %>
<div class="control-group <%= "error" unless @artist.errors[:name].empty? %>">
<%= f.label :name, :class => "control-label"  %>
<div class="controls">
<%= f.text_field :name %>
<span class="help-inline"><%= @artist.errors[:name].first unless @artist.errors[:name].empty? %></span>
</div>
</div>
<div class="control-group">
<div class='controls'>
<%= f.submit :class => "btn" %>
<%= link_to "Cancel", :back, :class => "btn" %>
</div>
</div>

</div>

<% end %>