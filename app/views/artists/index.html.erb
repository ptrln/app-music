<legend>
	<h1>
		Artists <small>(<%= @artists.count %>)</small>
		<small>
			Order by 
			<%= link_to('name', :order => "name", :search => params[:search])  %>
			/
			<%= link_to('newest_first', :order => "newest", :search => params[:search])  %>
		</small>
		<a href="<%=new_artist_path%>" class="btn btn-small pull-right"><i class="icon-plus-sign"></i> Create new artist</a>
	</h1>
</legend>
<form class="form-search pull-right">
	<div class="input-append">
	<input type="text" name="search" class="span2 search-query" value="<%= params[:search] %>">
	<button type="submit" class="btn">Search</button>
	</div>
</form>
<% @artists.each do |artist| %>
<div>
  <%= link_to(artist.name, artist_path(artist)) %>
</div>
<% end %>

